<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.itvillageltd.emphoyee.tracker.HomeActivity"
    tools:showIn="@layout/app_bar_home">



        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_margin="20dp"
            card_view:cardCornerRadius="4dp">

            <RelativeLayout
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:background="@drawable/profilecpy" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="serif-monospace"
                    android:gravity="center"
                    android:text="@string/my_profile"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/taskDefine"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_margin="20dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:gravity="center">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:background="@drawable/task" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="serif-monospace"
                android:gravity="center"
                android:text="@string/task_define"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                android:textStyle="bold" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/client"
        android:layout_width="140dp"
        android:layout_height="140dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:background="@drawable/employee" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView2"
                android:layout_centerHorizontal="true"
                android:fontFamily="serif-monospace"
                android:text="@string/Employee"
                android:textColor="@color/colorBlack"
                android:textSize="12dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
